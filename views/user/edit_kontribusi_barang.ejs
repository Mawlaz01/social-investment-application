<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SIAPP</title>
    <link rel="icon" type="image/x-icon" href="/images/user/Siapp.ico" />
    <link href="https://cdn.lineicons.com/5.0/lineicons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/form_acara.css">
</head>

<body>
    <%- include('partials/__nav_sidebar') %>
    <main class="content px-3 py-4">
        <div class="container-fluid">
            <div class="mb-3">
                <a class="btn btn-secondary mb-3" href="/users/detail_acara/<%= kontribusiBarang.id_acara %>">
                    <i class="lni lni-arrow-left"></i> Kembali
                </a>
                <div class="container-fluid frm-acara">
                    <h4 class="mb-3">Edit Kontribusi Barang</h4>
                    <form class="needs-validation" novalidate="" method="POST" action="/users/kontribusi_barang/update/<%= kontribusiBarang.id_kontribusi_barang %>" enctype="multipart/form-data">
                        <div class="row g-3 frm_layout">
                            <div class="col-sm-6">
                                <label for="namaBarang" class="form-label">Nama Barang</label>
                                <input type="text" class="form-control" id="namaBarang" name="nama_barang" placeholder="Masukkan Nama Barang" value="<%= kontribusiBarang.nama_barang %>" required>
                            </div>
                            <div class="col-sm-6">
                                <label for="jumlahBarang" class="form-label">Jumlah Barang</label>
                                <input type="text" class="form-control" id="jumlahBarang" name="jumlah_barang" value="<%= kontribusiBarang.jumlah_barang %>" required>
                            </div>
                            <input type="hidden" name="id_acara" value="<%= kontribusiBarang.id_acara %>">
                            <input type="hidden" name="tanggal_edit_sumbangan" value="<%= new Date().toISOString() %>">
                            <div class="col-12">
                                <label for="fotoBarang" class="form-label">Foto Barang</label>
                                <input type="file" class="form-control" id="fotoBarang" name="foto_kontribusi_barang" accept="image/*" required onchange="pratinjauGambar()">
                                <img id="pratinjau-foto" src="/images/kontribusi_barang/<%= kontribusiBarang.foto_kontribusi_barang %>" alt="Pratinjau Foto Barang" style="width: 100%; height: auto; margin-top: 10px;">
                            </div>
                            <hr class="my-6 border-3 border-top border-info">
                            <button class="w-100 btn btn-primary btn-lg" type="submit">Simpan Perubahan</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
    <script>
        function pratinjauGambar() {
            const input = document.getElementById('fotoBarang');
            const pratinjau = document.getElementById('pratinjau-foto');

            const reader = new FileReader();
            reader.onload = function(e) {
                pratinjau.src = e.target.result;
                pratinjau.style.display = 'block';
            };

            if (input.files && input.files[0]) {
                reader.readAsDataURL(input.files[0]);
            } else {
                pratinjau.src = '#';
                pratinjau.style.display = 'none';
            }
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="/js/script.js"></script>
    <script src="/js/rupiah.js"></script>
</body>

</html>
